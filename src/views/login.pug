extends base


block content 
    if errorMessage
        span=errorMessage 
    form(method="POST")
        input(name="username", placeholder="Type your username", type="text", required)
        input(name="password", placeholder="Type your password", type="password", required)
        input(type="submit", value="Join")
        
    hr
    div
        span Don't have an account? 
        a(href="/join") Create one now &rarr;