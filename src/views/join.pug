extends base


block content 
    if errorMessage
        span=errorMessage 
    form(method="POST")
        input(name="username", placeholder="Type your username", type="text", required)
        input(name="password", placeholder="Type your password", type="password", required)
        input(name="password2", placeholder="Confirm your password", type="password", required)
        input(name="name", placeholder="What's your name?", type="text", required)
        input(name="email", placeholder="Type your email address", type="email", required)
        input(name="location", placeholder="Where are you?", type="text", required)
        input(type="submit", value="Join")
    hr
    div
        span Already have an account? 
        a(href="/login") Log in now &rarr;